{
    "name": "yagvc/yagvc",
    "type": "project",
    "version": "v1.2.0",
    "description": "Laravel based visitor counter badges for readme's in github profiles & repositories.",
    "keywords": [
        "Laravel",
        "visitor",
        "counter",
        "badges",
        "readme",
        "profile",
        "repositories",
        "visitor-counter",
        "visitor-count-badges",
        "github-profile-views-counter"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "badges/poser": "3.1.1",
        "intervention/image": "^3.11.4",
        "laravel/framework": "12.41.1",
        "laravel/sanctum": "v4.2.0",
        "laravel/tinker": "v2.10.1",
        "simple-icons/simple-icons": "^15.16.0",
        "webmozart/assert": "^1.11"
    },
    "require-dev": {
        "fakerphp/faker": "v1.24.1",
        "larastan/larastan": "3.8.0",
        "laravel/boost": "^1.2.1",
        "laravel/pint": "v1.26.0",
        "laravel/sail": "v1.47.0",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "8.8.3",
        "pestphp/pest": "4.1.3",
        "pestphp/pest-plugin-type-coverage": "4.0.3",
        "phpunit/phpunit": "^12.3.8",
        "spatie/laravel-ignition": "^2.9.1",
        "squizlabs/php_codesniffer": "4.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Yagvc\\PHPStan\\": "phpstan/",
            "Yagvc\\Standards\\": "phpcs/Standards/Yagvc/"
        }
    },
    "scripts": {
        "test:lint": "vendor/bin/phpcs --standard=ruleset.xml ./app",
        "test:lint-fix": "vendor/bin/phpcbf --standard=ruleset.xml ./app",
        "test:analyze": "vendor/bin/phpstan analyse --memory-limit=2G",
        "test:unit": [
            "vendor/bin/pest tests/Unit"
        ],
        "test:feature": [
            "vendor/bin/pest tests/Feature"
        ],
        "test:coverage": [
            "vendor/bin/pest tests --coverage --coverage-clover coverage/clover.xml --min=88"
        ],
        "test:typecoverage": [
            "vendor/bin/pest tests --memory-limit=2G --type-coverage --min=100"
        ],
        "test:update": [
            "vendor/bin/pest -d --update-snapshots"
        ],
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "@test:lint-fix",
            "@test:analyze",
            "@test:unit",
            "@test:feature",
            "@test:coverage",
            "@test:typecoverage",
            "@putenv XDEBUG_MODE=off"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}